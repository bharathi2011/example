<h1>Listing toys</h1>

<table>
  <tr>
    <th>Toy name</th>
    <th>Desc</th>
    <th>Moments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @toys.each do |toy| %>
  <tr>
    <td><%= toy.toy_name %></td>
    <td><%= toy.desc %></td>
    <td><%= toy.moments %></td>
    <td><%= link_to 'Show', toy %></td>
    <td><%= link_to 'Edit', edit_toy_path(toy) %></td>
    <td><%= link_to 'Destroy', toy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

